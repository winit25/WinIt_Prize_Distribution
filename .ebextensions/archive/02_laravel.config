option_settings:
  aws:elasticbeanstalk:container:php:phpini:
    document_root: /public
    memory_limit: 512M
  aws:elasticbeanstalk:application:environment:
    COMPOSER_HOME: /root

container_commands:
  01_set_permissions:
    command: "chmod -R 775 storage bootstrap/cache"
    cwd: "/var/app/staging"
  02_clear_cache:
    command: "php artisan cache:clear && php artisan config:clear && php artisan route:clear && php artisan view:clear || true"
    cwd: "/var/app/staging"
  03_cache_config:
    command: "php artisan config:cache || true"
    cwd: "/var/app/staging"
